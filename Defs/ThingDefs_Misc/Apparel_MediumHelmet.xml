<?xml version="1.0" encoding="utf-8"?>
<Defs>
 
  <ThingDef ParentName="HatMakeableBase">
    <defName>Stalker_Apparel_ArmorExohelmet</defName>
    <label>Exohelmet</label>
    <description>Heavy Exohelmet - When it was part of an exosuit.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Exohelmet/Exohelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass> 
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>0.65</drawSize>
    </graphicData>
    <statBases>
     <WorkToMake>15750</WorkToMake>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>2</Mass>
	  <StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.4</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.4</StuffEffectMultiplierInsulation_Heat>
      <Flammability>0.4</Flammability>
      <EquipDelay>2</EquipDelay>
    </statBases>
	<equippedStatOffsets>
	  <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
   <recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMask</unfinishedThingDef>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
	</recipeMaker>
    <costList Inherit="False">
      <Plasteel>30</Plasteel>
	  <ComponentIndustrial>4</ComponentIndustrial>
	  <Steel>75</Steel>
    </costList>
    <apparel>
      <tags>
	   <li>MediumArmor</li>
       <li>IndustrialMilitaryBasic</li>
	   <li>GasMask</li>
      </tags>
	  <layers>
	   <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Stalker</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
	  <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <scoreOffset>4</scoreOffset>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Exohelmet/Exohelmet</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <forceEyesVisibleForRotations>
        <li>1</li>
        <li>2</li>
        <li>3</li>
      </forceEyesVisibleForRotations>
    </apparel>
	<comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>WearingPsYGasMask</hediff>
        <part>Head</part>
      </li>
    </comps>
	 <researchPrerequisites>
      <li>Mediumhelmet</li>
	  <li>FlakArmor</li>
    </researchPrerequisites>
  </ThingDef>
 
  <ThingDef ParentName="ArmorHelmetMakeableBase">
	<defName>Stalker_Apparel_Sphere</defName>
    <label>Sphere M20 Helmet</label>
    <description>A modern titanium helmet with aramid reinforcement, complemented by a high-quality gas mask equipped with photochromic lenses.</description>
		<graphicData>
			 <texPath>Things/Pawn/Humanlike/Apparel/Sphere/SphereIco</texPath>
			 <graphicClass>Graphic_Single</graphicClass>
		     <shaderType>CutoutMultiMask</shaderType>
			 <drawSize>0.65</drawSize>
		</graphicData>
		<techLevel>Industrial</techLevel>
		 <equippedStatOffsets>
         <MoveSpeed>-0.2</MoveSpeed>
         </equippedStatOffsets>
		<recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMask</unfinishedThingDef>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
		</recipeMaker>
		<costList>
			<ComponentIndustrial>2</ComponentIndustrial>
			<Chemfuel>10</Chemfuel>
		</costList>
		<statBases>
			<WorkToMake>8000</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<StuffEffectMultiplierArmor>0.12</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.11</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.13</StuffEffectMultiplierInsulation_Heat>
			<Mass>0.5</Mass>
		</statBases>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<developmentalStageFilter>Child, Adult</developmentalStageFilter>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
			<bodyPartGroups>
				 <li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Sphere/Sphere</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>IndustrialMilitaryBasic</li>
			</tags>
			 <defaultOutfitTags>
			<li>Soldier</li>
		  </defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
		  <options>
			<li>
			  <weight>10</weight>
			  <only>(0.33,0.33,0.33,1)</only>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.65,0.65,0.65,1)</only>
			</li>
			<li>
			  <weight>6</weight>
			  <min>(0.3,0.3,0.3,1)</min>
			  <max>(0.5,0.5,0.5,1)</max>
			</li>
			<li>
			  <weight>10</weight>
			  <only>(0.9,0.9,0.9,1)</only>
			</li>
		  </options>
		</colorGenerator>
		<tradeTags>
		  <li>Armor</li>
		</tradeTags>
		<modExtensions>
			<li Class="RWPaintingTool.PaintableExtension">
				<defaultPalette>
					<colorOne>(79,79,34)</colorOne>
					<colorTwo>(112,135,112)</colorTwo>
					<colorThree>(132,132,192)</colorThree>
				</defaultPalette>
			</li>
		</modExtensions>
    <researchPrerequisites>
       <li>Mediumhelmet</li>
	  <li>FlakArmor</li>
    </researchPrerequisites>
	</ThingDef>
	
