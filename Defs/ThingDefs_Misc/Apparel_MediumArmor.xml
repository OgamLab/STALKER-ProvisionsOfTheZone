    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Corundum/Corundum</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>1.0</drawSize>
    </graphicData>
    <costList Inherit="False">
      <Plasteel>150</Plasteel>
      <ComponentSpacer>6</ComponentSpacer>
	  <Cloth>100</Cloth>
    </costList>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <WorkToMake>38000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>0.85</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <EntityStudyRate>0.1</EntityStudyRate>
	  <MoveSpeed>-0.3</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
	   <tags>
         <li>IndustrialMilitaryBasic</li>
		 <li>MediumArmor</li>
      </tags>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Corundum/Corundum</wornGraphicPath>
	  <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Shell</li>
      </layers>
	   <defaultOutfitTags>
        <li>Stalker</li>
      </defaultOutfitTags>
