  <ThingDef ParentName="HatMakeableBase">
    <defName>Stalker_Apparel_GasMaskMerc</defName>
    <label>PA-7 Gas Mask</label>
    <description>A military adaptation of a civilian gas mask equipped with anti-glare lenses and a flexible filter mount that can be attached on either side, simplifying weapon use for left-handed wearers.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PA-7/PA-7</texPath>
      <graphicClass>Graphic_Single</graphicClass> 
	  <shaderType>CutoutComplex</shaderType>
      <drawSize>0.7</drawSize>
    </graphicData>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>6000</WorkToMake>
	  <StuffEffectMultiplierArmor>0.30</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
      <Mass>0.4</Mass>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
	 <equippedStatOffsets>
      <MoveSpeed>-0.2</MoveSpeed>
    </equippedStatOffsets>
   <recipeMaker>
			<researchPrerequisite>FlakArmor</researchPrerequisite>
			<unfinishedThingDef>UnfinishedMask</unfinishedThingDef>
			<recipeUsers Inherit="False">
				<li>TableMachining</li>
			</recipeUsers>
	</recipeMaker>
    <costList Inherit="False">
      <Plasteel>5</Plasteel>
      <ComponentSpacer>1</ComponentSpacer>
	  <Cloth>45</Cloth>
    </costList>
    <apparel>
      <bodyPartGroups>
	    <li>UpperHead</li>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PA-7/PA-7</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
	<comps>
      <li Class="CompProperties_CauseHediff_Apparel">
        <hediff>WearingPsYGasMask</hediff>
        <part>Head</part>
      </li>
    </comps>
	 <researchPrerequisites>
      <li>Lighthelmet</li>
	  <li>FlakArmor</li>
    </researchPrerequisites>
  </ThingDef>
  
  
